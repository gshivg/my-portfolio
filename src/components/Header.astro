---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import { Icon } from 'astro-icon'
---

<header>
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item">
      <a href="/my-writings/">My Writings</a>
    </li>
    <li class="menu-item">
      <a href="/projects/">Projects</a>
    </li>
    <li class="menu-item">
      <a href="/myself/" title="external link" rel="external noopener noreferrer">Myself</a>
    </li>
    <li class="menu-item type-icon">
      <a href="https://github.com/gshivg" title="Go to the my GitHub" target="_blank">
        <Icon name="github" />
      </a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [astro-icon] {
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [astro-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
